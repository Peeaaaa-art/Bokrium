<% if show_s3_cover? %>
  <%= image_tag bokrium_cover_url, {
    alt: @alt,
    loading: "lazy",
    class: "img-fluid #{@image_class} #{@s3_class}".strip,
    height: "auto"
  }.merge(@options) %>

<% elsif show_url_cover? %>
  <%= image_tag helpers.book_cover_display_url(@book), {
    alt: @alt,
    loading: "lazy",
    class: "img-fluid #{@image_class} #{@url_class}".strip,
    style: "",
    referrerpolicy: "no-referrer"
  }.merge(@options) %>

<% else %>
  <div class="cover-placeholder-wrapper">
    <%= image_tag helpers.cdn_path("no_cover.png"), {
      alt: @alt,
      loading: "lazy",
      class: "img-fluid rounded-sm placeholder-cover #{@image_class} #{@no_cover_class}".strip
    }.merge(@options) %>

    <div class="cover-title-overlay brake-word"><%= title_for_overlay %></div>
    <div class="logo-overlay">Bokrium</div>
  </div>
<% end %>