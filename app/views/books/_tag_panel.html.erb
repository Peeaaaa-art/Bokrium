<!-- タグ未選択ボタン -->
<button class="btn btn-outline-secondary btn-sm" data-bs-toggle="modal" data-bs-target="#tagSelectModal">
  <i class="bi bi-tags"></i> タグ
</button>

<!-- タグ選択モーダル -->
<div class="modal fade" id="tagSelectModal" tabindex="-1" aria-labelledby="tagSelectModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tagSelectModalLabel">タグを選択</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <div class="d-flex flex-wrap gap-2">
          <% user_tags.each do |tag| %>
            <%= button_to toggle_tag_book_path(book, tag_name: tag.name), method: :post,
                class: "btn btn-sm text-white",
                style: "background-color: #{tag.color.presence || '#6c757d'};" do %>
              <%= tag.name %>
            <% end %>
          <% end %>
        </div>
        <hr>
        <button class="btn btn-outline-primary btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#tagCreateModal">
          ＋ 新しいタグを作成
        </button>
        <button class="btn btn-outline-secondary btn-sm mt-3" data-bs-toggle="modal" data-bs-target="#tagManageModal">
          タグを管理する
        </button>
      </div>
    </div>
  </div>
</div>

<!-- タグ作成モーダル -->
<div class="modal fade" id="tagCreateModal" tabindex="-1" aria-labelledby="tagCreateModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tagCreateModalLabel">新しいタグを作成</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <%= form_with url: tags_path, method: :post, local: true do |f| %>
          <div class="mb-3">
            <%= f.label :name, "タグ名", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", name: "tag[name]", placeholder: "例: 哲学、小説など" %>
          </div>
          <div class="mb-3">
            <%= f.label :color, "タグの色", class: "form-label" %>
            <%= f.color_field :color, class: "form-control form-control-color", name: "tag[color]", value: "#6c757d" %>
          </div>
          <div class="text-end">
            <%= f.submit "作成", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- タグ管理モーダル -->
<div class="modal fade" id="tagManageModal" tabindex="-1" aria-labelledby="tagManageModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="tagManageModalLabel">タグの管理</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
      </div>
      <div class="modal-body">
        <% user_tags.each do |tag| %>
          <div class="d-flex align-items-center justify-content-between mb-2">
            <span class="badge rounded-pill px-3 py-2 text-white" style="background-color: <%= tag.color %>;">
              <%= tag.name %>
            </span>
            <div class="btn-group btn-group-sm">
              <button class="btn btn-outline-secondary"
                      data-bs-toggle="modal"
                      data-bs-target="#editTagModal<%= tag.id %>"
                      data-bs-dismiss="modal">
                編集
              </button>
              <%= button_to tag_path(tag), method: :delete,
                    data: { turbo_confirm: "このタグを削除しますか？" },
                    class: "btn btn-outline-danger" do %>
                削除
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- タグ編集モーダル群（管理モーダル外） -->
<% user_tags.each do |tag| %>
  <div class="modal fade" id="editTagModal<%= tag.id %>" tabindex="-1" aria-labelledby="editTagModalLabel<%= tag.id %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <%= form_with model: tag, url: tag_path(tag), method: :patch, local: true, scope: :tag do |f| %>
          <div class="modal-header">
            <h5 class="modal-title" id="editTagModalLabel<%= tag.id %>">タグの編集</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <%= f.label :name, "タグ名", class: "form-label" %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
              <%= f.label :color, "タグの色", class: "form-label" %>
              <%= f.color_field :color, class: "form-control form-control-color" %>
            </div>
          </div>
          <div class="modal-footer">
            <%= f.submit "更新", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>

<!-- 書籍に紐づくタグ表示 -->
<div class="d-flex flex-wrap gap-2 mt-2">
  <% book.tags&.each do |tag| %>
    <span class="badge rounded-pill" style="background-color: <%= tag.color.presence || '#6c757d' %>;">
      <%= tag.name %>
    </span>
  <% end %>
</div>


