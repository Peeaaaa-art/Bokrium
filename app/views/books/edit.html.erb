<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">書籍情報の編集</h4>
        </div>
        <div class="card-body">
          <%= form_with(model: @book, local: true, html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <% if @book.errors.any? %>
              <div class="alert alert-danger" role="alert">
                <h5 class="alert-heading"><%= pluralize(@book.errors.count, "件のエラー") %>が発生しました</h5>
                <ul class="mb-0">
                  <% @book.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= f.label :title, "タイトル", class: "form-label" %>
              <%= f.text_field :title, class: "form-control", required: true %>
              <div class="invalid-feedback">タイトルを入力してください</div>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :author, "著者", class: "form-label" %>
                <%= f.text_field :author, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :isbn, "ISBN", class: "form-label" %>
                <%= f.text_field :isbn, class: "form-control" %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :publisher, "出版社", class: "form-label" %>
                <%= f.text_field :publisher, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= f.label :page, "ページ数", class: "form-label" %>
                <%= f.number_field :page, class: "form-control", min: 1 %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-md-6">
                <%= f.label :price, "金額", class: "form-label" %>
                <%= f.number_field :price, class: "form-control", min: 1 %>
              </div>
              <div class="col-md-6">
                <%= f.label :book_cover, "表紙画像", class: "form-label" %>
                <%= f.file_field :book_cover, class: "form-control" %>
                <% if @book.book_cover.present? %>
                  <div class="mt-2">
                    <img src="<%= @book.book_cover %>" alt="表紙画像" class="img-thumbnail" style="max-height: 120px;">
                  </div>
                <% end %>
              </div>
            </div>

            <div class="d-flex justify-content-between mt-4">
              <%= link_to "戻る", book_path(@book), class: "btn btn-secondary" %>
              <%= f.submit "更新する", class: "btn btn-primary px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function () {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
