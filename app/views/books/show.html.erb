<div class="container mt-5">
  <div class="row justify-content-center mb-5">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><%= @book.title %></h4>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9"><%= @book.isbn.presence || "未登録" %></dd>

            <dt class="col-sm-3">出版社</dt>
            <dd class="col-sm-9"><%= @book.publisher.presence || "未登録" %></dd>

            <dt class="col-sm-3">ページ数</dt>
            <dd class="col-sm-9"><%= @book.page.present? ? "#{@book.page} ページ" : "未登録" %></dd>

            <dt class="col-sm-3">表紙画像</dt>
            <dd class="col-sm-9">
              <% if @book.book_cover.present? %>
                <img src="<%= @book.book_cover %>" alt="表紙画像" class="img-thumbnail" style="max-height: 240px;">
              <% else %>
                <span class="text-muted">画像なし</span>
              <% end %>
            </dd>
          </dl>
          <div class="book-actions mt-2 mb-2">
            <%= link_to "編集", edit_book_path(@book), class: "btn btn-sm btn-warning" %>
          </div>
          <div class="mb-3">

        <%= form_with(model: @book, local: true, html: { class: "mb-4" }) do |f| %>
        <div class="mb-3">
          <label class="form-label">タグ</label>
          <!-- タグ表示部分 -->
          <div class="mb-2">
            <% @book.tags.each do |tag| %>
              <span class="badge rounded-pill bg-info text-dark me-1" style="font-size:1em;">
                <%= tag.name %>
              </span>
            <% end %>
            <!-- タグ追加ボタン -->
            <button type="button" class="btn btn-sm btn-outline-info ms-2" data-bs-toggle="collapse" data-bs-target="#tagForm">
              <i class="bi bi-plus"></i>
            </button>
          </div>
          
          <!-- 折りたたみ可能なタグ入力フォーム -->
          <div class="collapse" id="tagForm">
            <div class="input-group">
              <%= text_field_tag :tags, @book.tags.map(&:name).join(','), class: "form-control", placeholder: "小説,哲学" %>
              <%= f.submit "保存", class: "btn btn-success" %>
            </div>
            <small class="form-text text-muted">カンマ区切りで入力（例: 小説,哲学）</small>
          </div>
        </div>
      <% end %>

          <div class="mt-5">
            <h5 class="mb-3">メモ</h5>
            <% if @memo.present? %>
              <%= form_with(model: [@book, @memo], local: true) do |f| %>
                <div class="mb-3">
                  <%= text_area_tag 'text', @memo.content && @memo.content["text"], class: "form-control", rows: 6, placeholder: "メモ内容を入力してください"  %>
                </div>

                <div class="mb-3">
                  <label class="form-label">ステータス</label>
                  <div>
                    <%= f.radio_button :published, true, id: "published_true" %>
                    <%= f.label :published_true, "公開", class: "form-check-label me-3" %>
                    <%= f.radio_button :published, false, id: "published_false" %>
                    <%= f.label :published_false, "非公開", class: "form-check-label" %>
                  </div>
                </div>

                <div class="d-flex justify-content-end">
                  <%= f.submit "更新", class: "btn btn-success" %>
                </div>
              <% end %>
            <% else %>
              <div class="alert alert-secondary">write your own memo</div>
              <%= link_to "メモを書く", new_book_memo_path(@book), class: "btn btn-outline-primary" %>
            <% end %>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <%= link_to "戻る", books_path, class: "btn btn-secondary" %>
          <%= link_to "削除", book_path(@book), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
