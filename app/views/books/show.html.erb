<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-10">
      <div class="row g-4 align-items-start">
        <!-- 書影 -->
        <div class="col-md-3 text-center">
          <% if @book.book_cover.present? %>
            <%= image_tag @book.book_cover.url, alt: @book.title, class: "img-fluid rounded shadow-sm", style: "max-height: 260px;" %>
          <% else %>
            <div class="bg-light d-flex align-items-center justify-content-center rounded shadow-sm" style="height:260px;">
              <span class="text-muted">画像なし</span>
            </div>
          <% end %>
        </div>
        <!-- 書誌情報 -->
        <div class="col-md-6">
          <h3 class="fw-semibold mb-2"><%= @book.title %></h3>
          <div class="mb-2 text-secondary fs-5"><%= @book.author.presence || "著者未登録" %></div>
          <div class="mb-2">
            <span class="me-3"><i class="bi bi-building"></i> <%= @book.publisher.presence || "出版社未登録" %></span>
            <span class="me-3"><i class="bi bi-upc-scan"></i> <%= @book.isbn.presence || "ISBN未登録" %></span>
          </div>
          <div class="mb-2">
            <span class="me-3"><i class="bi bi-file-earmark-text"></i> <%= @book.page.present? ? "#{@book.page}ページ" : "ページ数未登録" %></span>
            <span class="me-3"><i class="bi bi-currency-yen"></i> <%= @book.price.present? ? "#{@book.price}" : "価格未登録" %></span>
          </div>
          <!-- タグ -->
          <div class="mb-2">
            <i class="bi bi-tags"></i>
              <% @book.tags.each do |tag| %>
                <span class="badge rounded-pill bg-info text-dark me-1" style="font-size:1em;"><%= tag.name %></span>
              <% end %>
              <button type="button" class="btn btn-sm btn-outline-info ms-2" data-bs-toggle="collapse" data-bs-target="#tagForm">
                <i class="bi bi-plus"></i> タグ
              </button>
              <!-- タグ追加フォーム（折りたたみ） -->
              <div class="collapse mt-2" id="tagForm">
                <div class="input-group">
                  <%= form_with(model: @book, local: true, html: { class: "w-100" }) do |f| %>
                    <%= text_field_tag :tags, @book.tags.map(&:name).join(','), class: "form-control", placeholder: "小説,哲学" %>
                    <%= f.submit "保存", class: "btn btn-success" %>
                  <% end %>
                </div>
                <small class="form-text text-muted">カンマ区切りで入力（例: 小説,哲学）</small>
              </div>
          </div>
          <!-- ステータス -->
          <!-- 書誌情報の右側にステータスと公開セレクトを横並びで配置 -->
          <div class="d-flex justify-content-end align-items-center gap-3 mb-3">
            <%= form_with(model: @book, local: false, class: "status-form mb-0") do |f| %>
              <div>
                <%= f.select :status,
                      Book.statuses.keys.map { |s| [t("books.status.#{s}"), s] },
                      {},
                      class: "form-select d-inline-block", style: "width: 120px; display: inline-block;", onchange: "this.form.requestSubmit();" %>
              </div>
            <% end %>
          
            <%= form_with(model: [@book, @memo], local: false, class: "published-form mb-0") do |f| %>
              <div>
                <%= f.select :published,
                      [["公開", true], ["非公開", false]],
                      {},
                      class: "form-select d-inline-block", style: "width: 100px; display: inline-block;", onchange: "this.form.requestSubmit();" %>
              </div>
            <% end %>
          </div>
          
          <!-- 編集ボタン -->
          <div class="mt-3">
            <%= link_to edit_book_path(@book), class: "btn btn-warning btn-sm me-2" do %>
              <i class="bi bi-pencil-square"></i> 編集
            <% end %>
            <%= link_to "削除", book_path(@book), data: { turbo_method: :delete, turbo_confirm: "本当に削除しますか？" }, class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>



      <!-- メモ欄 -->
      <div class="card bg-rhodia-orange p-4 mt-5 shadow-sm">
        <% if @memo.present? %>
          <%= form_with(model: [@book, @memo], local: true) do |f| %>
            <h5 class="d-flex justify-content-center">memo</h5>
            <div class="d-flex justify-content-end">
              <%= f.submit "更新", class: "btn btn-success mb-2" %>
            </div>
            <div class="mb-3 ">
              <%= f.text_area :content, value: @memo.content && @memo.content["text"], class: "form-control rhodia-grid-bg",
                rows: 6, data: { controller: "autogrow" }, placeholder: "メモ内容を入力してください"  %>
            </div>
          <% end %>

        <% else %>
          <div class="alert alert-secondary">write your own memo</div>
          <%= link_to "メモを書く", new_book_memo_path(@book), class: "btn btn-outline-primary" %>
        <% end %>
      </div>

      <div class="d-flex justify-content-between mt-4">
        <%= link_to "戻る", books_path, class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
