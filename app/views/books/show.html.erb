<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0"><%= @book.title %></h4>
        </div>
        <div class="card-body">
          <dl class="row">
            <dt class="col-sm-3">ISBN</dt>
            <dd class="col-sm-9"><%= @book.isbn.presence || "未登録" %></dd>

            <dt class="col-sm-3">出版社</dt>
            <dd class="col-sm-9"><%= @book.publisher.presence || "未登録" %></dd>

            <dt class="col-sm-3">ページ数</dt>
            <dd class="col-sm-9"><%= @book.page.present? ? "#{@book.page} ページ" : "未登録" %></dd>

            <dt class="col-sm-3">表紙画像</dt>
            <dd class="col-sm-9">
              <% if @book.book_cover.present? %>
                <img src="<%= @book.book_cover %>" alt="表紙画像" class="img-thumbnail" style="max-height: 240px;">
              <% else %>
                <span class="text-muted">画像なし</span>
              <% end %>
            </dd>
          </dl>
          <div class="book-actions mt-2">
            <%= link_to "編集", edit_book_path(@book), class: "btn btn-sm btn-warning" %>
          </div>
          <div class="mt-5">
            <h5 class="mb-3">メモ</h5>
            <% if @memo.present? %>
              <%= form_with(model: [@book, @memo], local: true) do |f| %>
                <div class="mb-3">
                  <%= f.label :content, "内容", class: "form-label" %>
                  <%= text_area_tag 'text', @memo.content && @memo.content["text"], class: "form-control", rows: 6, placeholder: "メモ内容を入力してください"  %>
                </div>
                <div class="mb-3">
                  <%= f.label :tags, "タグ（カンマ区切り）", class: "form-label" %>
                  <%= text_field_tag 'tags', (@memo.content && @memo.content["tags"]).to_a.join(','), class: "form-control", placeholder: "小説,哲学" %>

                </div>
                <div class="mb-3 form-check">
                  <%= f.check_box :published, class: "form-check-input", id: "publishedCheck" %>
                  <%= f.label :published, "公開する", class: "form-check-label", for: "publishedCheck" %>
                </div>
                <div class="d-flex justify-content-end">
                  <%= f.submit "更新", class: "btn btn-success" %>
                </div>
              <% end %>
            <% else %>
              <div class="alert alert-secondary">write your own memo</div>
              <%= link_to "メモを書く", new_book_memo_path(@book), class: "btn btn-outline-primary" %>
            <% end %>
          </div>
        </div>
        <div class="card-footer d-flex justify-content-between">
          <%= link_to "編集", edit_book_path(@book), class: "btn btn-outline-primary" %>
          <%= link_to "一覧に戻る", books_path, class: "btn btn-secondary" %>
          <%= link_to "削除", book_path(@book), method: :delete, data: { confirm: "本当に削除しますか？" }, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  </div>
</div>
