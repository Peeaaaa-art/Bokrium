  <div class="books-grid-iphone">
    <% books.each do |book| %>
        <%= link_to book_path(book) do %>
          <% if book.book_cover_s3.attached? %>
            <%= image_tag book.book_cover_s3.variant(resize_to_limit: [200, 300]), alt: book.title, class: "book-cover-iphone img-fluid rounded" %>
          <% elsif book.book_cover.present? %>
            <img src="<%= book.book_cover %>" style="border-radius: 12px;" alt="表紙画像" class="book-cover-iphone rounded" >
          <% else %>
            <div class="no-cover-iphone book-cover-iphone"><%= book.title %></div>
          <% end %>
        <% end %>
    <% end %>
  </div>
