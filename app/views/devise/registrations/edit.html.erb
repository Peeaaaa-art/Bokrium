<div class="container my-5" style="max-width: 600px;">
  <div class="card shadow-sm mb-5">
  <h2 class="mt-4 mb-4 text-center text-primary">
    <%= t('.title', resource: devise_i18n_fix_model_name_case(resource.model_name.human, i18n_key: 'registrations.edit.title')) %>
  </h2>
  </div>
  <%= form_with(model: resource, url: registration_path(resource_name), method: :put, local: true, html: { class: "needs-validation", multipart: true }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="mb-3">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :introduction, class: "form-label" %>
      <%= f.text_area :introduction, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :avatar_s3, "アバター画像", class: "form-label" %>
      <%= f.file_field :avatar_s3, class: "form-control", direct_upload: true %>
      <div class="mt-2">
        <%= image_tag user_avatar(resource), alt: resource.name, class: "rounded-circle border", style: "width: 80px; height: 80px; object-fit: cover;" %>
      </div>
    </div>
    <div class="d-grid mb-4">
      <%= f.submit t('.update'), class: "btn btn-primary btn-lg" %>
    </div>
  <% end %>

  <div class="card mt-5">
    <div class="card-body">
      <%= button_to t('.cancel_my_account'), registration_path(resource_name), data: { confirm: t('.are_you_sure'), turbo_confirm: t('.are_you_sure') }, method: :delete, class: "btn btn-outline-danger w-100" %>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to t('devise.shared.links.back'), :back, class: "btn btn-link" %>
  </div>
</div>
