<turbo-frame id="five_layouts">
  <section class="layout-intro my-5 rounded-4" data-controller="animation">
    <h2 class="fade-in delay-1">選べる5つの本棚レイアウト</h2>

    <div class="container mt-4">
      <div class="row row-cols-1 row-cols-md-3 g-4 justify-content-center">

        <% layouts = [
          { icon: "bookshelf",            label: "棚ビュー",    img: "shef.png",        delay: 2 },
          { icon: "layout-three-columns", label: "背表紙ビュー", img: "spine.png",       delay: 3 },
          { icon: "file",                 label: "カードビュー", img: "card.png",        delay: 4 },
          { icon: "layout-sidebar-inset", label: "リストビュー", img: "detail_card.png", delay: 1 },
          { icon: "table",                label: "表形式ビュー", img: "b_note.png",      delay: 2 }
        ] %>

        <% layouts.each do |layout| %>
          <div class="col fade-in delay-<%= mobile ? 1 : layout[:delay] %>">
            <div class="text-center p-3 shadow rounded-4 h-100">
              <div class="text-muted small mb-1"><%= layout[:label] %></div>
              <i class="bi bi-<%= layout[:icon] %> fs-2 d-block mb-2 text-secondary"></i>
              <%= image_tag cdn_path("bookshelf/#{layout[:img]}"), alt: layout[:label], class: "img-fluid mb-2" %>
            </div>
          </div>
        <% end %>

      </div>
    </div>
  </section>
</turbo-frame>