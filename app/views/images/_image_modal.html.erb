<div class="modal fade" id="imageModal<%= identifier %>" tabindex="-1" aria-hidden="true" >
  <div class="modal-dialog modal-dialog-centered modal-xl bg-transparent">
    <div class="modal-content bg-transparent border-0">
      <div class="modal-body text-center p-0">
        <% if image&.image_s3&.attached? %>
          <%= image_tag image.image_s3,
                class: "img-fluid rounded shadow-lg", alt: "拡大画像" %>
          <button type="button" class="btn-close position-absolute top-0 end-0 m-3"
                  data-bs-dismiss="modal" aria-label="Close"></button>
        <% end %>
      </div>
    </div>
  </div>
</div>