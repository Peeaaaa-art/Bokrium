<div class="modal fade" id="memoEditModal-<%= memo.id || 'new' %>" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-xl modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-body">
        <%= form_with url: memo.persisted? ? book_memo_path(book, memo) : book_memos_path(book),
                      method: memo.persisted? ? :patch : :post,
                      id: "memo-edit-form-#{memo.id || 'new'}",
                      data: { turbo_frame: "_top" } do |f| %>

          <div class="card-header d-flex justify-content-center py-2">
            <i class="bi bi-cloud-fog2-fill"></i><i class="bi bi-cloud-haze2"></i><i class="bi bi-cloud-fog2-fill"></i>
          </div>

          <%= hidden_field_tag "memo[content]", "", id: "memo_content_input_#{memo.id || 'new'}" %>
          <div id="rich-editor-root-<%= memo.id || 'new' %>" data-initial-content="<%= raw(memo.content || "") %>" data-memo-id="<%= memo.id || 'new' %>" class="rich-editor-root"></div>

          <div class="mt-4 d-flex justify-content-between align-items-center">
            <div class="form-check form-switch">
              <%= f.check_box :published, { class: "form-check-input", role: "switch" }, "you_can_see", "only_i_can_see" %>
              <%= f.label :published, "公開する", class: "form-check-label" %>
            </div>
            <div class="d-flex gap-3">
              <%= button_tag "削除", type: "button", class: "btn btn-danger", id: "memo-delete-button-#{memo.id || 'new'}" %>
              <%= button_tag "保存", type: "submit", class: "btn btn-primary" %>
            </div>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>