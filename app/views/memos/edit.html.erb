<turbo-frame id="memo_<%= @memo.id %>">
  <div class="card mb-3">
    <div class="card-header bg-primary text-white">
      <h5 class="mb-0">メモを編集</h5>
    </div>
    <div class="card-body">
      <%= form_with(model: [@book, @memo], local: true) do |f| %>
        <div class="mb-3">
          <%= f.text_area :content, value: @memo.content && @memo.content["text"], 
             class: "form-control", rows: 6 %>
        </div>
        <div class="mb-3">
          <%= f.check_box :published %>
          <%= f.label :published, "公開する" %>
        </div>
        <div class="d-flex justify-content-between">
          <%= f.submit "更新", class: "btn btn-success" %>
          <%= link_to "キャンセル", book_path(@book), class: "btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</turbo-frame>