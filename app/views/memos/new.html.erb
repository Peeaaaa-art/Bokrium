<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">新規メモ作成</h4>
        </div>
        <div class="card-body">

          <!-- 本の情報（タイトル・著者・出版社など） -->
          <div class="mb-4 d-flex align-items-center">
            <% if @book.book_cover.present? %>
              <img src="<%= @book.book_cover %>" alt="表紙画像" class="img-thumbnail me-3" style="max-width: 100px;">
            <% end %>
            <div>
              <h5 class="mb-1"><%= @book.title %></h5>
              <div class="text-muted"><%= @book.publisher %></div>
              <div class="text-muted"><%= @book.page %>ページ</div>
            </div>
          </div>

          <%= form_with(model: [@book, @memo], local: true, html: { class: 'needs-validation', novalidate: true }) do |f| %>
            <% if @memo.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @memo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <!-- タグ入力 -->
            <div class="mb-3">
              <label class="form-label">タグ（カンマ区切り）</label>
              <input type="text" name="tags" class="form-control" placeholder="例: 小説, 哲学, ファンタジー">
              <div class="form-text">複数タグはカンマで区切ってください</div>
            </div>

            <!-- 公開/非公開 -->
            <div class="mb-3">
              <label class="form-label">公開ステータス</label>
              <div>
                <%= f.check_box :published, class: "form-check-input", id: "publishedCheck" %>
                <label class="form-check-label" for="publishedCheck">公開する</label>
              </div>
            </div>

            <!-- メモ本文（Markdown対応） -->
            <div class="mb-4">
              <label class="form-label">メモ内容（Markdown対応）</label>
              <textarea name="text" class="form-control" rows="8" placeholder="ここにメモを書いてください"></textarea>
              <div class="form-text">Markdown記法が使えます</div>
            </div>

            <div class="d-flex justify-content-end">
              <%= f.submit "保存", class: "btn btn-success px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
(function () {
  'use strict'
  const forms = document.querySelectorAll('.needs-validation')
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault()
        event.stopPropagation()
      }
      form.classList.add('was-validated')
    }, false)
  })
})()
</script>
