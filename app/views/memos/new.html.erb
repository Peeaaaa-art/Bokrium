<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h4 class="mb-0">新規メモ作成</h4>
        </div>
        <div class="card-body">

          <!-- 本の情報（タイトル・著者・出版社など） -->
          <div class="mb-4 d-flex align-items-center">
            <% if @book.book_cover.present? %>
              <img src="<%= @book.book_cover %>" alt="表紙画像" class="img-thumbnail me-3" style="max-width: 100px;">
            <% end %>
            <div>
              <h5 class="mb-1"><%= @book.title %></h5>
              <div class="text-muted"><%= @book.publisher %></div>
              <div class="text-muted"><%= @book.page %>ページ</div>
            </div>
          </div>

          <%= form_with(model: [@book, @memo], local: true) do |f| %>
            <% if @memo.errors.any? %>
              <div class="alert alert-danger">
                <ul class="mb-0">
                  <% @memo.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>
            <!-- 公開/非公開 -->
                <%= f.check_box :published, 
                      { 
                        checked: @memo.you_can_see?,
                        class: "form-check-input",
                        data: { action: "change->form#submit" } 
                      }, 
                      "you_can_see",   # チェック時の値（enumキー）
                      "only_i_can_see" # 未チェック時の値（enumキー） 
                %>
                <%= f.hidden_field :published, value: "only_i_can_see" %>

            <!-- メモ本文（Markdown対応） -->
            <div class="mb-4">
              <%= f.label :memo_text, "メモ内容（Markdown対応）", class: "form-label" %>
                <%= f.text_area :content, value: @memo.content && @memo.content["text"], class: "form-control rhodia-grid-bg",
                rows: 6, data: { controller: "autogrow" }, placeholder: "メモ内容を入力してください"  %>
            </div>

            <div class="d-flex justify-content-between">
              <%= link_to "戻る", book_path(@book), class: "btn btn-secondary" %>
              <%= f.submit "保存", class: "btn btn-success px-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>