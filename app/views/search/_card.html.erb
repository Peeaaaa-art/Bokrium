<div class="card mb-3">
  <div class="row g-0">
    <div class="col-md-4">
      <img src="<%= book.large_image_url %>" class="img-fluid" alt="<%= book.title %>">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= book.title %></h5>
        <p class="card-text"><%= book.author %></p>
        <%= button_to "My本棚に追加", books_path(book: book), method: :post, class: "btn btn-success", form: { data: { turbo_stream: true } } %>
      </div>
    </div>
  </div>
</div>