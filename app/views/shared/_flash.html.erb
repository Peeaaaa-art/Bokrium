<% flash.each do |type, message| %>
  <% bootstrap_class = case type.to_sym
      when :success then "info"
      when :notice then "info"
      when :alert then "danger"
      when :error then "danger"
      when :danger then "danger"
      else "info"
    end %>

  <div id="flash-message" class="flash-message alert alert-<%= bootstrap_class %> alert-dismissible fade show" role="alert">
    <%= message %>
  </div>
<% end %>