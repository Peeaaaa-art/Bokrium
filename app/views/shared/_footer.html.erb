<footer class="border-top footer-font bg-apple-light">
  <div class="container-fluid position-relative">
    <!-- 右上ヘルプ -->
    <div class="position-absolute" style="top: 0.7rem; right: 1rem;">
      <%= link_to guest_starter_books_path, title: "はじめてガイド" do %>
        <i class="bi bi-question-circle fs-4 text-dark"></i>
      <% end %>
    </div>
    <!-- 左上GitHub -->
    <div class="position-absolute" style="top: 0.7rem; left: 1rem;">
      <%= link_to "https://github.com/Peeaaaa-art/Bokrium", title: "GitHub", class: "github-link", target: "_blank", rel: "noopener" do %>
        <i class="bi bi-github fs-4 text-dark"></i>
      <% end %>
    </div>

    <!-- 中央寄せコンテンツ -->
    <div class="container text-center py-2">
      <%= link_to root_path, class: "navbar-brand fw-bold text-dark big-shoulders-inline-bold logo-footer", title: "ボクリウム" do %>
        Bokrium
      <% end %>

      <div class="d-flex flex-wrap justify-content-center gap-4 small text-secondary">
        <%= link_to "Terms", terms_path, class: "text-decoration-none footer-link", title: "利用規約" %>
        <%= link_to "Privacy", privacy_path, class: "text-decoration-none footer-link", title: "プライバシーポリシー" %>
        <%= link_to "Legal", legal_path, class: "text-decoration-none footer-link", title: "マンスリーサポートに関するご案内" %>
        <%= link_to "Contact", contact_path, class: "text-decoration-none footer-link", title: "お問い合わせ" %>
        <%= link_to "FAQ", faq_path, class: "text-decoration-none footer-link", title: "よくある質問" %>
        <%= link_to "Donation", donations_path	, class: "text-decoration-none footer-link", title: "寄付" %>
      </div>

      <div class="small text-muted mt-2">
        &copy; <%= Time.current.year %> Bokrium. All rights reserved.
      </div>

  <div class="d-flex flex-column flex-md-row justify-content-center align-items-center flex-wrap gap-3 mt-3">
    <!-- Rakutenバナーはそのまま -->
    <a href="https://webservice.rakuten.co.jp/" target="_blank" rel="noopener">
      <img src="https://webservice.rakuten.co.jp/img/credit/200709/credit_22121.gif"
          alt="Rakuten Web Service Center"
          width="221" height="21" />
    </a>
    <!-- その他APIの一括表記 -->
    <div class="d-inline-block text-nowrap text-secondary text-center fw-semibold " style="font-family: Nunito; font-size: 0.75rem; letter-spacing: -0.04em;">
        <span style="font-size: 0.5rem; ">Supported by</span>
      <a href="https://openbd.jp/" class="text-decoration-none text-danger-bok" target="_blank" rel="noopener">OpenBD</a>,
      <a href="https://developers.google.com/books" class="text-decoration-none text-danger-bok" target="_blank" rel="noopener">Google Books</a>,
      <a href="https://www.ndl.go.jp/" class="text-decoration-none text-danger-bok" target="_blank" rel="noopener">NDL</a>
    </div>
  </div>
</footer>
