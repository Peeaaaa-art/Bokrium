<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <%= form_with(model: user, local: true, html: { multipart: true, class: "needs-validation" }) do |form| %>
            <% if user.errors.any? %>
              <div class="alert alert-danger">
                <h4 class="alert-heading"><%= pluralize(user.errors.count, "件のエラー") %>が発生しました:</h4>
                <ul class="mb-0">
                  <% user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, "名前", class: "form-label" %>
              <%= form.text_field :name, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :email, "メール", class: "form-label" %>
              <%= form.email_field :email, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :introduction, "自己紹介", class: "form-label" %>
              <%= form.text_area :introduction, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :avatar, "アバター画像", class: "form-label" %>
              <%= form.file_field :avatar, class: "form-control" %>
              <% if user.avatar.present? %>
                <div class="mt-2">
                  <%= image_tag user.avatar.url, alt: user.name, class: "rounded-circle border", style: "width: 100px; height: 100px; object-fit: cover;" %>
                </div>
              <% end %>
            </div>

            <% unless user.persisted? %>
              <div class="mb-3">
                <%= form.label :password, "パスワード", class: "form-label" %>
                <%= form.password_field :password, class: "form-control" %>
              </div>
            <% end %>

            <div>
              <%= form.submit "保存", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
