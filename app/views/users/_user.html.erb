<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <% if user.avatar.present? %>
            <%= image_tag user.avatar.variant(resize_to_fit: [300, 300]), alt: user.name, class: "avatar-circle" %>
          <% else %>
            <div class="rounded-circle bg-secondary mb-3 d-inline-block" style="width:120px; height:120px; line-height:120px; color:#fff;">
              <i class="bi bi-person" style="font-size:3rem;"></i>
            </div>
          <% end %>

          <h5 class="card-title mb-3"><%= user.name %></h5>
          <ul class="list-group list-group-flush text-start mb-3">
            <li class="list-group-item"><strong>ID:</strong> <%= user.id %></li>
            <li class="list-group-item"><strong>メール:</strong> <%= user.email %></li>
            <li class="list-group-item"><strong>自己紹介:</strong> <%= user.introduction.presence || "未設定" %></li>
          </ul>

          <div class="d-flex justify-content-center gap-2">
            <%= link_to '詳細', user, class: "btn btn-outline-info" %>
            <%= link_to '編集', edit_user_registration_path(user), class: "btn btn-outline-warning" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
