<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <div class="card shadow-sm">
        <div class="card-body text-center">
          <%= image_tag user_avatar(user, size: :large), alt: user.name, class: "avatar-circle" %>

          <h5 class="card-title mb-3"><%= user.name %></h5>
          <ul class="list-group list-group-flush text-start mb-3">
            <li class="list-group-item"><strong>ID:</strong> <%= user.id %></li>
            <li class="list-group-item"><strong>メール:</strong> <%= user.email %></li>
            <li class="list-group-item"><strong>自己紹介:</strong> <%= user.introduction.presence || "未設定" %></li>
          </ul>

          <div class="d-flex justify-content-center gap-2">
            <%= link_to '詳細', user, class: "btn btn-outline-info" %>
            <%= link_to '編集', edit_user_registration_path(user), class: "btn btn-outline-warning" %>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
